{
    "name": "fabio.hiroki/ethereum-twitter-bot",
    "description": "Bot that tweets the ethereum price",
    "authors": [
        {
            "name": "Fabio Hiroki",
            "email": "fabiothiroki@gmail.com"
        }
    ],
    "require": {
        "abraham/twitteroauth": "^3.1"
    },
    "config": {
        "platform": {
            "php": "8.0.10"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.98",
        "friendsofphp/php-cs-fixer": "^3.1"
    },
    "license": "MIT",
    "scripts": {
        "lint": "vendor/bin/phpstan analyse -c phpstan.neon",
        "sniff": "./vendor/bin/php-cs-fixer fix -vvv --dry-run --show-progress=dots index.php"
    }
}
